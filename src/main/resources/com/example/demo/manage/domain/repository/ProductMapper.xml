<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.manage.domain.repository.ProductMapper">

	<resultMap type="com.example.demo.manage.domain.model.Product" id="product">
		<id column="product_id" property="productId"></id>
		<result column="product_cd" property="productCd"></result>
		<result column="product_name" property="productName"></result>
		<result column="composite_flag" property="compositeFlag"></result>
		<result column="food_flag" property="foodFlag"></result>
		<result column="product_status" property="productStatus"></result>
		<result column="comp1" property="comp1"></result>
		<result column="comp2" property="comp2"></result>
		<result column="comp3" property="comp3"></result>
		<result column="comp4" property="comp4"></result>
		<result column="comp5" property="comp5"></result>
		<result column="comp6" property="comp6"></result>
		<result column="comp7" property="comp7"></result>
		<result column="comp8" property="comp8"></result>
		<result column="comp9" property="comp9"></result>
		<result column="comp10" property="comp10"></result>
	</resultMap>

	<insert id="insertProduct" parameterType="com.example.demo.manage.domain.model.Product">
	INSERT INTO product
	VALUES (#{productId},#{productCd},#{productName},#{compositeFlag},#{foodFlag},#{productStatus},
	#{comp1},#{comp2},#{comp3},#{comp4},#{comp5},#{comp6},#{comp7},#{comp8},#{comp9},#{comp10})
	</insert>

	<select id="selectOneProduct" parameterType="string" resultMap="product">
	SELECT *
	FROM product
	WHERE product_id = #{productId}
	</select>

	<select id="selectAllProduct" resultMap="product">
	SELECT *
	FROM product
	</select>

	<update id="updateProduct" parameterType="com.example.demo.manage.domain.model.Product">
	UPDATE product
	SET product_cd = #{productCd}, product_name = #{productName},
	composite_flag = #{compositeFlag}, food_flag = #{foodFlag}, product_status = #{productStatus},
	comp1 = #{comp1}, comp2 = #{comp2}, comp3 = #{comp3}, comp4 = #{comp4},
	comp5 = #{comp5}, comp6 = #{comp6}, comp7 = #{comp7}, comp8 = #{comp8},
	comp9 = #{comp9}, comp10 = #{comp10}
	WHERE product_id = #{productId}
	</update>

	<delete id="deleteProduct" parameterType="string">
	DELETE FROM product
	WHERE product_id = #{productId}
	</delete>

	<select id="searchProduct" resultMap="product">
	SELECT *
	FROM product
	WHERE product_id LIKE CONCAT('%',#{id},'%')
	AND product_cd LIKE CONCAT('%',#{cd},'%')
	AND product_name LIKE CONCAT('%',#{name},'%')
	AND composite_flag = #{flag1}
	AND food_flag = #{flag2}
	AND product_status = #{status}
	</select>

</mapper>